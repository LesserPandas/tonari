<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.tonari.mapper.MyPageMapper">
	<select id ="tjoinpage" resultType="com.tonari.domain.MemberAuthVO">
		select * from member_auth_view where nick = #{nick}
	</select>
	<insert id = "teacherjoin" parameterType="com.tonari.domain.TeacherVO">
		<selectKey keyProperty="bno" order="BEFORE" resultType="int">
			select teacher_seq.nextval from dual
		</selectKey>
		insert into teacher(bno,member_bno,content,image,category,coment,dodate,age,title)
		values
		(#{bno},#{member_bno},#{content},#{image},#{category},#{coment},#{dodate},#{age},#{title})
	</insert>
	<select id = "getTeacherVO" resultType="com.tonari.domain.TeacherVO">
		select * from TEACHER_INFO_VIEW where teacher_bno = #{bno}
	</select>
	
</mapper>